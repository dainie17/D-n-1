<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF5F6"
    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnv_trangchu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fragment_menu"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:labelVisibilityMode="auto"
        app:itemTextColor="@color/menu"
        app:itemIconTint="@color/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/fragment_menu"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/btn_dangbai"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/background_tron"
            android:text="Đăng bài"
            android:textSize="17dp"/>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/txt_SLTB"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:gravity="center"
        android:elevation="20dp"
        android:textSize="12dp"
        android:visibility="invisible"
        android:background="@drawable/thong_bao_ok"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>