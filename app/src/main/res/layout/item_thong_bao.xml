<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_AnhNguoiTB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_notifications_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_LoaiTBNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại thông báo"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_AnhNguoiTB"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_NoiDungTBNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nội dung thông báo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/img_AnhNguoiTB"
        app:layout_constraintTop_toBottomOf="@+id/txt_LoaiTBNhan" />

</androidx.constraintlayout.widget.ConstraintLayout>